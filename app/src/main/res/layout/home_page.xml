<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/house1" />

    <!-- Semi-transparent overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="false"
        android:focusable="false"
        />

    <!-- Teks dan Logo disatukan dalam LinearLayout agar rapi -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:gravity="center">

        <TextView
            android:id="@+id/Rumahkami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RumahKami."
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/Logoimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/logorumah"
            />
    </LinearLayout>

    <!-- Tombol Login -->
    <Button
        android:id="@+id/btn_login_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:backgroundTint="#808080" />

    <!-- Tombol Sign Up -->
    <Button
        android:id="@+id/btn_signup_home"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        android:backgroundTint="#808080" />

</RelativeLayout>
