<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="5dp"
        android:background="#080075">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/outline_arrow_circle_left_24"
            android:layout_marginTop="3dp"
            android:contentDescription="kembali"
            app:tint="@android:color/white" />

        <!-- User Name -->
        <TextView
            android:id="@+id/chat_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/back_btn"
            android:text="Agent1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/chat_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@id/input_bar"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Example Incoming Message -->
        <TextView
            android:id="@+id/msg_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_bubble_chat"
            android:padding="12dp"
            android:text=" Hello! How can I help you?"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <!-- Example Outgoing Message -->
        <TextView
            android:id="@+id/msg_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bubble_chat"
            android:padding="12dp"
            android:layout_gravity="end"
            android:text=" I want to ask about my order."
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/input_bar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/message_input"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/send_btn"
            android:layout_alignParentLeft="true"
            android:background="@drawable/input_chat"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginRight="10dp"
            android:hint="Type a message..."
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/send_btn"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/send_bg"
            android:src="@drawable/rounded_send"
            android:contentDescription="kirim"
             />
    </RelativeLayout>

</RelativeLayout>